{namespace vgps3.loadMask.templates}

/**
 * @param message The message to display
 * @param className A CSS class for to add to the message
 */
{template .wait}
<div class="vgps3-progress">
  <img src="{vgps3.loadMask.IMG_SRC}" width="{vgps3.loadMask.IMG_WIDTH}px" height="{vgps3.loadMask.IMG_HEIGHT}px" alt="chargement" />
  <p class="{$className}">{$message}</p>
</div>
{/template}